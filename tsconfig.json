{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Allow TypeScript to emit JS files for standalone scripts
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use Node.js resolution for modules
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist" // Output directory for compiled JavaScript
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/api/uploadToSupabase"],
  "exclude": ["node_modules", "dist"]
}
